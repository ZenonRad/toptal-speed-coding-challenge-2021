{
  "compilerOptions": {
    "lib": ["es5", "es6", "esnext"],
    "target": "es2015",
    "baseUrl": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"]
}